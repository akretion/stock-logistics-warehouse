<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>

        <record id="stock_warehouse_orderpoint_search" model="ir.ui.view">
            <field name="model">stock.warehouse.orderpoint</field>
            <field name="inherit_id" ref="stock.warehouse_orderpoint_search" />
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                    <filter name="own_warehouse" string="My Warehouse" domain="[('warehouse_id.user_ids', '=', uid)]"/>
                </field>
            </field>
        </record>

        <record id="stock.action_orderpoint_form" model="ir.actions.act_window">
            <field name="context">{'search_default_own_warehouse': 1}</field>
        </record>

    </data>
</openerp>
